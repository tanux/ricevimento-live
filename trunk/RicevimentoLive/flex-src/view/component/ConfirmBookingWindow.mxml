<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx"
				title="Conferma la tua prenotazione"
				layout="vertical" 
				width="380" 
				height="240"
				titleStyleName="titleText"
				backgroundColor="white"
				backgroundAlpha="1.0"
				borderColor="white"
				borderAlpha="1.0"
				cornerRadius="0"
				showCloseButton="true"
				creationComplete="facade.sendNotification(ApplicationFacade.SHOWED_CONFIRM_BOOKING_WINDOW,this)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		.titleText {
			fontSize: 14px;
		}
		.headingText {
			paddingTop: 10px;
			paddingBottom: 10px;
			fontSize: 10px;
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[			
			var facade:ApplicationFacade = ApplicationFacade.getInstance() as ApplicationFacade;
		]]>
	</fx:Script>
	<mx:Text text="Qui metto i dati della prenotazione effettuata"
			 width="100%"
			 styleName="headingText" 
			 height="50%"/>
	<mx:TextArea id="taBookingReason" text="Descrivi brevemente il motivo del ricevimento"
				 width="100%"
				 height="50%" />
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button label="Conferma" id="btnConfirmBooking"/>
	</mx:HBox>	
</mx:TitleWindow>
